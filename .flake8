[flake8]
exclude = 
    .venv,
    .git,
    __pycache__,
    *.egg-info,
    .pytest_cache,
    build,
    dist,
    .tox

max-line-length = 127
max-complexity = 10

# Ignore specific error codes
ignore = 
    E203,
    W503

# Only check project files
filename = 
    *.py

per-file-ignores =
    __init__.py:F401
